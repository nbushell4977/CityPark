
<div class="col-lg-6" class="row-fluid">
<div class="show_posting_page">
	<div id="search_results">
		<div class="center-coordinates">
			<div class="latitude"><%=@spot.latitude%></div>
			<div class="longitude"><%=@spot.longitude%></div>
		</div>	
		<li>
		<h1><%= @spot.address %></h1>
		<h1><%= @spot.city %>, <%= @spot.state %> </h1>
		<div class="latitude"><%=@spot.latitude%></div>
		<div class="longitude"><%=@spot.longitude%></div>
		</li>
	

	<h2>Price: $<%=@spot.price%>/month</h2>
	<p>Description: <%=@spot.description%></p>
	<p>Posted by: <a href="/users/<%=@spot.user.id%>"><%=@spot.user.username%></a> at <%=@spot.created_at%></p>
	<p> 
	<div class="contact_user_id"><%= @spot.user.id%></div>
	<a id="contact_user" href="/users/<%=@spot.user.id%>/contact">Contact <%=@spot.user.username%></a></p>
</div><br><br>
	<div>
		<% if @spot.user.id == current_user.id %>
			<a href='/spots/<%@spot.id%>/edit'></a>
			<a href='/users/show'></a>
		<% end %>
	</div>

	</div>
	<% if !@spot.nearbys.empty? %>
		Nearby Spots:
		<ul>
			<% @spot.nearbys.each do |nearby_spot| %>
				<a href="/spots/<%=nearby_spot.id%>"><%= nearby_spot.address %></a><br>
			<% end %>
		</ul>
	<% end %>
</div>
<div class="col-lg-6">
	<div id="map"></div>
</div>