
<div>
  <h1>Search for Parking Spots Near You</h1>
  <p>Please enter your address OR your zipcode</p>
  <div class="col-lg-6 row-fluid white-background">
    <form action="/spots/results" method="POST", name="search_spots_by_address">
    	<div class="form-group">
    	  <label for="address">Street Address</label>
    	  <input class="form-control" type="text" placeholder="address", name="address"></input>
    	</div>

    	<div class="form-group">
    	  <label for="city">City</label>
    	  <input class="form-control" type="text" placeholder="city" name="city"></input>
    	</div>

    	<div class="form-group">
    	  <label for="state">State</label>
    	  <input class="form-control" type="text" placeholder="state" name="state"></input>
    	</div>

    	<input class="btn btn-primary" type='submit' value='Search'>
    </form><br>

  	<p>OR:</p>
  <form action='/spots/results', method='POST', name='search_spots_by_zip'>
  	<div class="form-group">
  	  <label for="zip">Zip Code</label>
  	  <input class="form-control" type="text" placeholder="zip code", name="zip"></input>
  	</div>

  	<input class="btn btn-primary" type='submit' value='Search'>
  	
  </form>
  </div>

  <div class="row-fluid">
    <div class="col-lg-6">
      <div id="map"></div>
    </div>
</div>

