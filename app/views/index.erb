<div>
  <h1>Search for Parking Spots Near You</h1>
  <p>Please enter your address OR your zipcode</p>
  <form action="/spots/results" method="POST", name="search_spots_by_address">
  	<div>
  	  <label for="address">Street Address</label>
  	  <input type="text" placeholder="address", name="address"></input>
  	</div>

  	<div>
  	  <label for="city">City</label>
  	  <input type="text" placeholder="city" name="city"></input>
  	</div>

  	<div>
  	  <label for="state">State</label>
  	  <input type="text" placeholder="state" name="state"></input>
  	</div>

  	<input type='submit' value='Search'>
  </form>

  	<p>OR:</p>
  <form action='/spots/results', method='POST', name='search_spots_by_zip'>
  	<div>
  	  <label for="zip">Zip Code</label>
  	  <input type="text" placeholder="zip code", name="zip"></input>
  	</div>

  	<input type='submit' value='Search'>
  	
  </form>
  <div id="map"></div>
</div>

